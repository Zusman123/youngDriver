<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="15dp"
                android:text="מספר שיעורים"
                android:textColor="#fff"
                android:textStyle="bold"
                android:maxLines="2"
                android:gravity="center"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/sumLessons"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorPrimary"
                android:padding="15dp"
                android:text="28"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:background="@drawable/border"
            android:layout_weight="1">

            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingTop="15dp"
                android:text="הוצאות"
                android:maxLines="2"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"

                android:text="(שולמו ולא שולמו)"
                android:textColor="#fff"

                android:gravity="center"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/sumPaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:text="100"
                    android:layout_gravity="bottom"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:maxLines="2"
                android:padding="15dp"
                android:text="אורך שיעורים"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="15dp"
                android:text="24h 35m"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:paddingBottom="2dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="15dp"
                android:maxLines="2"
                android:text="לא שולמו"
                android:layout_weight="3"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/sumNotPaid"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="15dp"
                android:text="0"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>